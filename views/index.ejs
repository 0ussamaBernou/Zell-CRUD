<!-- index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hello Node</title>
</head>

<body>
    <h1>May node and express be with me</h1>
    <form action="/quotes" method="post">
        <input type="text" placeholder="name" name="name">
        <input type="text" placeholder="quote" name="quote">
        <button data-btn id="btn" type="submit">Submit</button>
    </form>
    <ul class="quotes">
        <!-- loop through quotes -->
        <% for(let i=0; i< quotes.length; i++) {%>
            <li class="quote">
                <span>
                    <%= quotes[i].name %>
                </span>
                <span>
                    <%= quotes[i].quote %>
                </span>
            </li>
            <% } %>
    </ul>
    <div>
        <h2>Darth Vadar invades!</h2>
        <p>
            Replace first Yoda's quote with a quote written by Darth
            Vadar
        </p>
        <button data-btn>Replace Yoda's quote</button>
    </div>

    <script src="/main.js"></script>
</body>

</html>